@model YDCManagementApp.Data.ClientContact

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="card mt-5">
        <div class="card-body bg-light">

            @* Title *@
            <h1 class="text-center">Delete ClientContact</h1>
            <hr />
            <h3 class="text-danger">Are you sure you want to delete this?</h3>

            @* content *@          
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Client.CompanyName)
                </dt>
                <dd class="col-sm-8">
                   : @Html.DisplayFor(model => model.Client.CompanyName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Infix)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.Infix)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Functions.FunctionName)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.Functions.FunctionName)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.OfficePhoneNumber)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.CallingCodeOffice) - @Html.DisplayFor(model => model.OfficePhoneNumber)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </dt>
                <dd class="col-sm-8">
                    : @Html.DisplayFor(model => model.CallingCodeMobile) - @Html.DisplayFor(model => model.MobileNumber)
                </dd>
            </dl>

            @* Buttons *@
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-success" asp-action="Details" asp-route-id="@Model.Id">Back to Contact</a>
            </form>
        </div>
    </div>
</div>
