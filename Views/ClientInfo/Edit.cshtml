@model YDCManagementApp.Data.ClientInfo

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="card mt-5">
        <div class="card-body bg-light">

            @* title *@
            <h1 class="text-center">Edit ClientInfo</h1>
            <hr />
            <form asp-action="Edit">
                <div class="row">
                    <div class="col-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        @* left *@
                        <div class="form-group">
                            <label asp-for="ClientId" class="control-label"></label>
                            <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Street" class="control-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ZipCode" class="control-label"></label>
                            <input asp-for="ZipCode" class="form-control" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State" class="control-label"></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>

                    @* right *@
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" class="control-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressNum" class="control-label"></label>
                            <input asp-for="AddressNum" class="form-control" />
                            <span asp-validation-for="AddressNum" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />

                    @* buttons *@
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a class="btn btn-primary" asp-controller="client" asp-action="Details" asp-route-id="@Model.Client.Id">Back to Client</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
