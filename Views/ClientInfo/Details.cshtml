@model YDCManagementApp.Data.ClientInfo

@{
    ViewData["Title"] = "Details";
}



<div class="container">
    <div class="card mt-5">
        <div class="card-body bg-light">

            @* Title *@
            <h1 class="text-center">Details ClientInfo</h1>
            <hr />

            @* content *@
            <dl class="row pl-5">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.Street)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.ZipCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.State)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AddressNum)
                </dt>
                <dd class="col-sm-10">
                    : @Html.DisplayFor(model => model.AddressNum)
                </dd>
            </dl>
            <hr />

            @* under card *@
            <div class="text-center">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn btn-primary" asp-controller="client" asp-action="Details" asp-route-id="@Model.Client.Id">Back to Client</a>
            </div>
        </div>
    </div>
</div>
