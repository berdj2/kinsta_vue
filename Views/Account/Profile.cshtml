@model YDCManagementApp.Models.UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center" id="profile-page-txt">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="row mt-4">
                <div class="col-md-3 text-center">
                    <img src="@Model.ProfileImage" alt="Profile Image" class="img-fluid rounded-circle" />
                </div>
                <div class="col-md-9">
                    <h3 id="profile-page-txt">@Model.Name</h3>
                    <p>
                        <i class="fas fa-envelope" id="profile-page-txt"></i> @Model.EmailAddress
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>