@model YDCManagementApp.Data.Client

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <div class="card mt-5">
        <div class="card-body bg-light">

            @* Title *@
            <h1 class="text-center">Delete Client</h1>
            <hr>
            <h3 class="text-danger">Are you sure you want to delete this?</h3>

            @* Content *@
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.CompanyName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Website)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Website)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ClientStatus)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ClientStatus)
                </dd>

                <dt class = "col-sm-2">
                    Adresses
                </dt>
                <dd class = "col-sm-10" style="max-height: 4em; white-space: nowrap; overflow-y: scroll;">
                    @if (Model.ClientInfo.Count == 0)
                    {
                        <p>No Adresses currently</p>
                    }
                    else
                    {
                        @foreach (var item in Model.ClientInfo)
                        {
                            <div id="adreschild" class="border-bottom border-light">

                                    @Html.DisplayFor(model => item.Street)
                                    @Html.DisplayFor(model =>item.ZipCode)
                                    @Html.DisplayFor(model =>item.State)
                                    @Html.DisplayFor(model =>item.City)
                                    @Html.DisplayFor(model =>item.Country)
                                    @Html.DisplayFor(model =>item.AddressNum)
                            </div>
                        }
                    }
                </dd>
            </dl>
            <hr>
            
            @* Buttons *@
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@Model.Id">Back to Client</a>
            </form>
        </div>
    </div>
</div>
